<header id="header">
	<div id="mobile-nav-panel">
		<i class="icon-menu icon-large"></i>
	</div>
	<nav id='site-nav' class="nav">
		<ul>
			<% for (var i in theme.menu){ %><li><a href="<%- theme.menu[i] %>"><%= i %></a></li><% } %>
			<li>
				<input id='toggle-search' type="checkbox"/>
					<span id="search-wrapper">
						<input type="search" id='search' name='site-search'/>
					</span>
					<!-- <button class='ghost'>Search</button> -->
				<label for="toggle-search">
					<i id="nav-search-btn" class="icon-search" title="Search"></i>
				</label>
			</li>
			<% if (theme.rss){ %>
				<li>
					<a href="<%- theme.rss %>" id="nav-rss-link" class="icon-feed" title="RSS Feed"></a>
				</li>
			<% } %>
		</ul>
	</nav>
	<div id="search-form-wrap">
		<%- search_form({button: '&#xF002;'}) %>
	</div>
	<div class="blog-title">
		<h1>
			<a href="<%- config.root %>"><%= config.title %></a>
		</h1>
	</div>
</header>
