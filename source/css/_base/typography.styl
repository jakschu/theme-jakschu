// basefont
html
	font: 16px font-sans 1.25 // does the font really work? try changing to a serif
	text-rendering: optimizelegibility
	-webkit-text-size-adjust: 100%
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

// headings
h1,
h2,
h3,
h4,
h5,
h6
	color: color-title
	font-weight: bold
	margin-bottom: 1.5rem
	& a
		color: color-title
		text-decoration: none
		&:hover
			color: color-title

// links
a
	color: color-link;
	text-decoration: none;
	transition: color 0.2s ease-out;

a:hover
	color: #2a8998;

abbr
	cursor: help;

acronym,
abbr
	border-bottom: 1px boder-color dotted;
	font-variant: normal;

pre,
code
	font-family: font-mono;
	font-size: 1em;

